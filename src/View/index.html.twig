{% extends "base.html.twig" %}

{% block title %}Les vues avec Twig {% endblock %}
{% block stylesheet %}<link rel="stylesheet" href="CSS/index.css">{% endblock %}

{% block h1 %}INDEX{% endblock %}

{% block content %}   
    <div class="products">
        {% for idProduct in products %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{idProduct}}</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>            
        {% endfor %}   
    </div>  
{% endblock %}